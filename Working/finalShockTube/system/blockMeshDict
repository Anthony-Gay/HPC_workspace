FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

vertices // places vertices in coordinate plane
(
    //Fluid domain
    (0 0 0) //coordinates of vertex 0
    (1 0 0) //1
    (1 1 0) //2...etc
    (0 1 0)
    (0 0 1)
    (1 0 1)
    (1 1 1)
    (0 1 1)

    //Particle domain
    (1 0 0) //coordinates of vertex 8
    (7 0 0) //9
    (7 1 0) //10...etc
    (1 1 0)
    (1 0 1)
    (7 0 1)
    (7 1 1)
    (1 1 1)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) fluid (100 1 1) simpleGrading (1 1 1) // gives labels to vertices and #cells in each dim and there sizes?
    hex (8 9 10 11 12 13 14 15) particle (600 1 1) simpleGrading (1 1 1) // gives labels to vertices and #cells in each dim and there sizes?
);

boundary
(
    DSMCSide
    {
        type symmetry; 
        faces
        (
            (9 10 14 13)
        );
    }

    fluidSide
    {
        type patch; 
        faces
        (
            (0 4 7 3)
        );
    }

     DSMCBound
    {
        type patch;//symmetry;//patch; 
        faces
        (
            (8 12 15 11)
        );
    }

    fluidBound
    {
        type patch; 
        faces
        (
            (1 2 6 5)
        );
    }
    
    nullDims
    {
        type empty; // Which faces do not require a solution, compresses to 1D
        faces
        (
            (0 1 5 4)
            (5 6 7 4)
            (3 7 6 2)
            (0 3 2 1)
            (8 9 13 12)
            (13 14 15 12)
            (11 15 14 10)
            (8 11 10 9)
        );
    }
);

mergePatchPairs
(
);


